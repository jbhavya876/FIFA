{
  "name": "world-cup-betting-app",
  "version": "1.0.0",
  "description": "FIFA World Cup 2026 Betting App with Cryptocurrency Payments",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd front-end && npm run dev",
    "build": "cd front-end && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../front-end && npm install",
    "setup": "npm run install:all"
  },
  "keywords": [
    "betting",
    "football",
    "world-cup",
    "cryptocurrency",
    "metamask",
    "blockchain",
    "react",
    "express"
  ],
