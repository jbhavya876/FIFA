# ========================================
# World Cup 2026 Betting App Environment
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# GOOGLE OAUTH CONFIGURATION
# ========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ========================================
# OPENAI CONFIGURATION
# ========================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================

# Ethereum Configuration
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id
ETHEREUM_CHAIN_ID=11155111
ETHEREUM_CONTRACT_ADDRESS=your-smart-contract-address

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_CHAIN_ID=devnet
SOLANA_CONTRACT_ADDRESS=your-solana-program-address

# ========================================
# DATABASE CONFIGURATION (Future Use)
# ========================================
# MongoDB (for future implementation)
MONGODB_URI=mongodb://localhost:27017/world-cup-betting
MONGODB_DB_NAME=world-cup-betting

# PostgreSQL (alternative for future implementation)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=world_cup_betting
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# ========================================
# REDIS CONFIGURATION (Future Use)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ========================================
# EMAIL CONFIGURATION (Future Use)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@worldcupbetting.com

# ========================================
# PAYMENT PROCESSING (Future Use)
# ========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ========================================
# SECURITY CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# FRONTEND CONFIGURATION
# ========================================
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME="World Cup 2026 Betting"
VITE_APP_VERSION=1.0.0

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_PREDICTIONS=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_GOOGLE_OAUTH=true
ENABLE_ANALYTICS=true

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
DEBUG=true
ENABLE_MOCK_DATA=true
ENABLE_LOGGING=true

